{
  "version": 1,
  "hooks": {
    "sessionStart": [
      {
        "type": "command",
        "bash": ".github/hooks/session-start.sh",
        "cwd": ".",
        "timeoutSec": 5
      }
    ],
    "preToolUse": [
      {
        "type": "command",
        "bash": ".github/hooks/pre-tool-use.sh",
        "cwd": ".",
        "timeoutSec": 3
      }
    ],
    "postToolUse": [
      {
        "type": "command",
        "bash": ".github/hooks/post-tool-use.sh",
        "cwd": ".",
        "timeoutSec": 2
      }
    ]
  }
}
